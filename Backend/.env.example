# Environment Configuration for EduLink Backend

# Database Configuration
# For MongoDB Atlas (recommended for production):
# MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/edulink?retryWrites=true&w=majority&appName=EduLink

# For local MongoDB (development only):
# MONGO_URI=mongodb://localhost:27017/edulink

MONGO_URI=your_mongodb_connection_string_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Security Configuration (add these for enhanced security)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
SESSION_SECRET=your_session_secret_key_here_also_long_and_random

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MongoDB Connection Pool Settings (optional - mongoose has good defaults)
# DB_MAX_POOL_SIZE=10
# DB_MIN_POOL_SIZE=5